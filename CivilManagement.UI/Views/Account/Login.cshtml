@model CivilManagement.UI.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/css/floating.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
    </style>
</head>
<body>

    <form asp-action="Login" method="post" class="form-signin">

        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-label-group">

            <input asp-for="IdentitNum" class="form-control" placeholder="Kullanıcı Adı" required="" autofocus="" />
            <label for="inputEmail">Kullanıcı Adı</label>
        </div>

        <div class="form-label-group">
            <input asp-for="Phone" class="form-control" placeholder="Parola" required="" />
            <label for="inputEmail">Parola</label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <script>
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
    </script>
</body>
</html>